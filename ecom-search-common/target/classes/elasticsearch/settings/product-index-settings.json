{
  "analysis": {
    "analyzer": {
      "custom_text_analyzer": {
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "asciifolding",
          "edge_ngram_filter"
        ]
      }
    },
    "filter": {
      "edge_ngram_filter": {
        "type": "edge_ngram",
        "min_gram": 2,
        "max_gram": 20
      }
    }
  }
}